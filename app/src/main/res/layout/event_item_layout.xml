<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables">

    <LinearLayout
        android:id="@+id/ll_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/iv_avatar_size"
            android:layout_height="@dimen/iv_avatar_size"
            android:layout_margin="@dimen/margin_5"
            android:contentDescription="@string/description"
            tools:src="@drawable/ic_launcher_foreground">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_18"
                android:textColor="@color/colorBlack"
                tools:text="lucifurious - dreamfactory...">
            </TextView>

            <TextView
                android:id="@+id/event_type_and_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_16"
                android:textColor="@color/colorBlack"
                tools:text="PushEvent 2014-01-21T15:29:59Z">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_line_size"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@color/colorSingleLine">
            </View>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>